doctype html
include jade/_funcs

-
  title = 'title';

  keywords = [
  ];

  description = '';

  viewport = {
    width: 'device-width',
    'initial-scale': 1,
    'maximum-scale': 1,
    'minimum-scale': 1,
    'user-scalable': 'no',
    'shrink-to-fit': 'no',
    'minimal-ui': '',
  };

  formatDetection = {
    'telephone': 'no',
    'email': 'no',
    'address': 'no',
    'date': 'no',
  };

  cssFiles = [
    'static/style/main.scss',
  ];

  headjsFiles = [
  ];

  jsFiles = [
  ];

